# Maintainer: Jim Madge <jmmadge@gmail.com>
pkgname=my-systemd-boot-pacman-hook
pkgver=1
pkgrel=1
pkgdesc='A pacman hook to update sytemd-boot automatically'
arch=('any')
license=('MIT')
depends=('systemd')
source=('systemd-boot.hook')
md5sums=('cc948b2536e4a42caca01a7656d6babe')

package() {
        install -m0755 -d "$pkgdir"/etc/pacman.d/hooks
        install -m0644 "$srcdir"/systemd-boot.hook "$pkgdir"/etc/pacman.d/hooks/systemd-boot.hook
}
