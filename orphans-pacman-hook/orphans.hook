[Trigger]
Type = Package
Operation = Remove
Target = *

[Action]
Description = Counting orphaned packages...
When = PostTransaction
Exec = /usr/bin/bash -c 'NORPHANS=$(pacman -Qdt | wc -l); if [ -z "$NORPHANS" ]; then return; else printf "$NORPHANS orphaned packages.\nList orphaned packages with pacman -Qdt and remove with pacman -Rns \$(pacman -Qqdt)\n"; fi'
