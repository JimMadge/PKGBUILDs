pkgname=systemd-boot-pacman-hook
pkgver=1
pkgrel=1
pkgdesc='A pacman hook to update sytemd-boot automatically'
arch=('any')
license=('MIT')
depends=('systemd')
source=('systemd-boot.hook')
sha256sums=('118e3adbdffa8ea0d6f0f4de95ac8414ef6c20ac7d7d3903bc84aecc74762421')

package() {
        install -Dm 0644 "$srcdir"/systemd-boot.hook "$pkgdir"/usr/share/libalpm/hooks/systemd-boot.hook
}
