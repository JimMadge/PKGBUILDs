[Trigger]
Type = Package
Operation = Upgrade
Target = pacman-mirrorlist

[Action]
Depends = reflector
Description = Updating pacman mirrorlist
When = PostTransaction
Exec = /bin/sh -c "reflector --country 'United Kingdom' --sort rate --save /etc/pacman.d/mirrorlist && rm -f /etc/pacman.d/mirrorlist.pacnew"
