# Maintainer: Jim Madge <jmmadge@gmail.com>
pkgname=my-paccache-u-pacman-hook
pkgver=1
pkgrel=1
pkgdesc='A pacman hook to remove uninstalled packages from the cache'
arch=('any')
license=('MIT')
depends=('systemd')
source=('paccache-uninstall.hook')
md5sums=('38ce34fe74b43f04d0084019e9921914')

package() {
        install -m0755 -d "$pkgdir"/etc/pacman.d/hooks
        install -m0644 "$srcdir"/paccache-uninstall.hook "$pkgdir"/etc/pacman.d/hooks/paccache-uninstall.hook
}
